<% provide(:title, 'Sign up') %> <h1>Sign up</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-body">
            <%= render 'shared/error_messages' %>
            <%= form_for(@user) do |f| %> 
                    <div class="form-group">
                    <%= f.label "用户名" %>
                    <%= f.text_field :name, class:"form-control"%></div>
                    <div class="form-group">
                    <%= f.label "邮箱" %>
                    <%= f.email_field :email, class:"form-control"%></div>
                    <div class="form-group">
                    <%= f.label "密码" %>
                    <%= f.password_field :password, class:"form-control"%></div>
                    <div class="form-group">
                    <%= f.label "请确认密码" %>
                    <%= f.password_field :password_confirmation, class:"form-control"%></div>
                    <div class="form-group col-md-4 col-md-offset-4">

                    <%= f.submit "注   册", class: "btn btn-primary btn-block " %></div>
                    
            <% end %>
        </div>
    </div>

      </div>
</div>
